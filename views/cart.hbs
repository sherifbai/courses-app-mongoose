{{#if courses.length}}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Название курса</th>
            <th>Цена</th>
            <th>Колчество</th>
            <th>Действие</th>
        </tr>
        </thead>
        <tbody>
        {{#each courses}}
            <tr>
                <td>{{courseId.title}}</td>
                <td>
                    <p class="card-text price">{{sum}}</p>
                </td>
                <td>{{quantity}}</td>
                <td>
                    <a href="/cart/remove/{{courseId._id}}" type="submit" class="btn btn-warning">Удалить</a>
                </td>
            </tr>
        {{/each}}
        </tbody>
        <tfoot>
        <tr>
            <td><strong>Общая цена</strong></td>
            <td><p class="card-text price">{{overallSum}}</p></td>
            <td></td>
            <td>
                <a href="/order/add" class="btn btn-info">Заказать</a>
            </td>
        </tr>
        </tfoot>
    </table>

{{else}}
    <h1>Корзинка пока пуста</h1>
{{/if}}